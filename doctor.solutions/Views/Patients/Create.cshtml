@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Patient

<h4>Add a new patient:</h4>

@using (Html.BeginForm())
{
  <p>Patient's name: @Html.TextBoxFor(model => model.Name)</p>

  <p>Patient's birthday:</p>
  @Html.EditorFor(model => model.Birthday)

  <p>Assign this patient to a doctor:</p>
  @Html.Label("Select doctor")
  @Html.DropDownList("DocId")


  <input type="submit" value="Add new patient" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all patients", "Index")</p>