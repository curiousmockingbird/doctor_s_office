@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;


<h1>Doctors:</h1>

@if (@Model.Count == 0)
{
  <h3>No Doctors have been added yet!</h3>
} 

<ul>
  @foreach(Doc doctor in Model)
  {
    <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DocId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new doctor to database", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>